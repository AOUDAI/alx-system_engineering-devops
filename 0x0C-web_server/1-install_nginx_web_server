#!/usr/bin/env bash
# install and configure nginx on a remote ubuntu server

sudo su 
apt-get update
apt-get install -y nginx

config_file="/etc/nginx/sites-available/example_ip"

echo 'server {
	listen 80 default_server;
	listen [::]:80 default_server;


	location / {
		default_type test/plain;
		echo Hello World!;
	
	}

}' > "$config_file"

ln -s "$config_file" /etc/nginx/sites-enabled/

nginx -t && systemctl reload nginx
